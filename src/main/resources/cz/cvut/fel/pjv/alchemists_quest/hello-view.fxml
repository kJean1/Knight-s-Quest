<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cz.cvut.fel.pjv.alchemists_quest.HelloController"
            prefHeight="650.0" prefWidth="800.0">

    <top>
        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 5;">
            <Label fx:id="infoLabel" text="Info: Press A/D to move, SPACE to jump, C to Craft"/>
        </VBox>
    </top>

    <center>
        <StackPane>
            <Canvas fx:id="gameCanvas" width="800.0" height="600.0" />

            <VBox fx:id="craftingBox" visible="false" spacing="10" style="-fx-background-color: rgba(0,0,0,0.7); -fx-padding: 10;" alignment="CENTER">
                <Label text="Crafting" style="-fx-font-size: 18px; -fx-text-fill: white;"/>

                <GridPane fx:id="craftingGrid" hgap="5" vgap="5" alignment="CENTER">
                    <StackPane style="-fx-border-color: white; -fx-background-color: rgba(255,255,255,0.1);" GridPane.rowIndex="0" GridPane.columnIndex="0">
                        <ImageView fitWidth="50" fitHeight="50"/>
                    </StackPane>
                    <StackPane style="-fx-border-color: white; -fx-background-color: rgba(255,255,255,0.1);" GridPane.rowIndex="0" GridPane.columnIndex="1">
                        <ImageView fitWidth="50" fitHeight="50"/>
                    </StackPane>
                    <StackPane style="-fx-border-color: white; -fx-background-color: rgba(255,255,255,0.1);" GridPane.rowIndex="0" GridPane.columnIndex="2">
                        <ImageView fitWidth="50" fitHeight="50"/>
                    </StackPane>

                    <StackPane style="-fx-border-color: white; -fx-background-color: rgba(255,255,255,0.1);" GridPane.rowIndex="1" GridPane.columnIndex="0">
                        <ImageView fitWidth="50" fitHeight="50"/>
                    </StackPane>
                    <StackPane style="-fx-border-color: white; -fx-background-color: rgba(255,255,255,0.1);" GridPane.rowIndex="1" GridPane.columnIndex="1">
                        <ImageView fitWidth="50" fitHeight="50"/>
                    </StackPane>
                    <StackPane style="-fx-border-color: white; -fx-background-color: rgba(255,255,255,0.1);" GridPane.rowIndex="1" GridPane.columnIndex="2">
                        <ImageView fitWidth="50" fitHeight="50"/>
                    </StackPane>

                    <StackPane style="-fx-border-color: white; -fx-background-color: rgba(255,255,255,0.1);" GridPane.rowIndex="2" GridPane.columnIndex="0">
                        <ImageView fitWidth="50" fitHeight="50"/>
                    </StackPane>
                    <StackPane style="-fx-border-color: white; -fx-background-color: rgba(255,255,255,0.1);" GridPane.rowIndex="2" GridPane.columnIndex="1">
                        <ImageView fitWidth="50" fitHeight="50"/>
                    </StackPane>
                    <StackPane style="-fx-border-color: white; -fx-background-color: rgba(255,255,255,0.1);" GridPane.rowIndex="2" GridPane.columnIndex="2">
                        <ImageView fitWidth="50" fitHeight="50"/>
                    </StackPane>
                </GridPane>

                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="craftButton" text="Craft"/>
                    <Label fx:id="craftResultLabel" text="Result: None" style="-fx-text-fill: white;"/>
                </HBox>
            </VBox>

        </StackPane>
    </center>

    <bottom>
        <HBox fx:id="inventoryBox" spacing="10" alignment="CENTER" prefHeight="60" style="-fx-padding: 5;">
            <ImageView fitWidth="50" fitHeight="50"/>
            <ImageView fitWidth="50" fitHeight="50"/>
            <ImageView fitWidth="50" fitHeight="50"/>
            <ImageView fitWidth="50" fitHeight="50"/>
            <ImageView fitWidth="50" fitHeight="50"/>
        </HBox>
    </bottom>

</BorderPane>
